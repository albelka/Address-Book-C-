<!DOCTYPE html>
<html>
  <head>
    <title>Hello Friend!</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <link rel='stylesheet' href='/Content/css/styles/css'>
  </head>
  <body>
    <div class="container">
      <h1>Contacts</h1>
      @if (@Model.Count == 0)
      {
        <h3>Record your contacts here!</h3>
      }

      <ul>
        @foreach (var contact in Model)
        {
          <li><a href="/contacts/@contact.GetId()">@contact.GetName()</a></li>
        }
      </ul>

      @if (@Model.Count != 0)
      {
        <form action="/contacts/clear" method="post">
          <button type="submit">Clear All Contacts</button>
        </form>
      }

      <h3><a href="/contacts/new">Add a new contact</a></h3>

    </div>
  </body>
</html>
