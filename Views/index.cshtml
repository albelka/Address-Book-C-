<!DOCTYPE html>
<html>
  <head>
    <title>Address Book</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <link rel='stylesheet' href='../Content/css/styles/css'>
  </head>
  <body>
    <div class="container">
      <h1>Your Address Book</h1>
      @if (@Model.Count == 0)
      {
        <h4>You can enter and store your contacts here</h4>
      }

      <ul>
        @foreach (var contact in Model)
        {
          <li><a href="/contacts/@contact.GetId()">@contact.GetName()</a></li>
        }
      </ul>

      @if (@Model.Count != 0)
      {
        <form action="/contacts/clear" method="post">
          <button type="submit">Clear All Contacts</button>
        </form>
      }

    <br><a href="/contacts/new">Add a new contact</a>

    </div>
  </body>
</html>
